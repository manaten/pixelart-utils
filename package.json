{
  "name": "dot",
  "author": "manaten@manaten.net",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "lint": "run-p lint:*",
    "lint:js": "eslint **/*.{js,jsx,mjs,ts,tsx,vue}",
    "lint-staged": "lint-staged",
    "fix": "run-s fix:*",
    "fix:js": "run-s \"lint:js -- --fix\"",
    "fix:prettier": "prettier --write --ignore-unknown .",
    "build": "node ./util/build-cli.mjs",
    "watch": "run-p watch:*",
    "watch:gif": "onchange \"**/*.{mjs,gif}\" -- node ./util/build-cli.mjs {{file}}",
    "watch:edg": "onchange \"**/*.edg\" -e \"**/*temporary*\" -e \"**/*no_build*\" -- edg2gif {{file}}"
  },
  "dependencies": {
    "@manaten/edg2gif": "^0.0.1",
    "gifwrap": "^0.10.1",
    "glob": "^10.3.10",
    "jimp": "^0.22.10",
    "mkdirp": "^3.0.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@types/node": "^22.13.10",
    "@typescript-eslint/parser": "^8.26.1",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "prettier": "^3.4.2",
    "shelljs": "^0.8.5",
    "tsx": "^4.19.3",
    "typescript": "5.5",
    "typescript-eslint": "^8.26.1"
  }
}
